<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/frag_login">

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_centerInParent="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:max="100"
        android:layout_below="@id/field_password"
        android:backgroundTint="#000000"
        android:indeterminateTint="#FF9800"
        android:layout_marginTop="1dp"/>

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:fontFamily="@font/segoebold"
        android:text="LOGIN"
        android:textColor="@color/cardview_light_background"
        android:textSize="14pt"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/field_username"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/txt_login"
        android:layout_centerInParent="true"
        android:layout_marginTop="64dp"
        android:background="@drawable/loginrectangle"
        android:fontFamily="@font/segoebold"
        android:hint="USERNAME"
        android:paddingLeft="20dp"
        android:textColor="@color/cardview_light_background"
        android:textColorHint="@color/cardview_light_background"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/field_password"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/field_username"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/loginrectangle"
        android:fontFamily="@font/segoebold"
        android:inputType="textPassword"
        android:hint="PASSWORD"
        android:paddingLeft="20dp"
        android:textColor="@color/cardview_light_background"
        android:textColorHint="@color/cardview_light_background"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/btn_login"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/field_password"
        android:layout_marginTop="-10dp"
        android:layout_alignEnd="@+id/field_password"
        android:src="@drawable/loginbutton"/>

    <TextView
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:fontFamily="@font/segoebold"
        android:text="REGISTER"
        android:textColor="@color/cardview_light_background"
        android:textSize="8pt"
        android:textStyle="bold" />

</RelativeLayout>